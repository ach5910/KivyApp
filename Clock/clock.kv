<Label>:
	font_name: 'Rubik'
	font_size: 90
	markup: True

<RubikButton@Button>:
	font_name: 'Rubik'
	font_size: 25
	bold: True
	background_normal: 'button_normal.png'
	background_down: 'button_down.png'
	border: (2, 2, 2, 2)

BoxLayout:
	orientation: 'vertical'

	Label:
		id: time
		text: '[b]00[/b]:00:00'
	
	BoxLayout:
		height: 90
		orientation: 'horizontal'
		padding: 20
		spacing: 20
		size_hint: (1, None)

		RubikButton:
			id: start_stop
			text: 'Start'
			on_press: app.start_stop()

		RubikButton:
			id: reset
			text: 'Reset'
			on_press: app.reset()
			background_normal: 'red_button_normal.png'
			background_down: 'red_button_down.png'

	Label:
		id: stopwatch
		text: '00:00.[size=40]00[/size]'